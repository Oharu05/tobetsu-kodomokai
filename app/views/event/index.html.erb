    <li class= "event">
      <h3 class="eventTitle"><span class="fas fa-caret-right"></span><%= event.title %></h3>
      <p id="eventDetail"><%= event.detail %></p>
      <img src="<%= event.imageUrl1 %>"height="170px" class="eventImage1">
      <img src="<%= event.imageUrl2 %>" height="170px" class="eventImage2">
    </li>
    <% end %>
  </ul>
</article>
